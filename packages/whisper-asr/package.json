{
  "name": "@cuttledoc/whisper-asr",
  "version": "1.0.0",
  "description": "Whisper ASR for Node.js with CoreML acceleration on Apple Silicon",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsup",
    "clean": "node-gyp clean && rm -rf dist",
    "prepare:whisper": "bash scripts/prepare-whisper.sh",
    "download:model": "bash scripts/download-model.sh"
  },
  "files": [
    "dist/",
    "prebuilds/",
    "build/Release/*.node",
    "README.md"
  ],
  "keywords": [
    "whisper",
    "asr",
    "speech-to-text",
    "transcription",
    "coreml",
    "apple-silicon",
    "neural-engine"
  ],
  "author": "cuttledoc",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin"
  ],
  "cpu": [
    "arm64"
  ],
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.0.0"
  },
  "devDependencies": {
    "node-gyp": "^10.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
