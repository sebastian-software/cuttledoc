{
  "name": "cuttledoc",
  "version": "1.0.0",
  "description": "Fast offline video-to-document transcription with AI enhancement",
  "type": "module",
  "bin": {
    "cuttledoc": "./dist/cli.js"
  },
  "files": [
    "dist",
    "build/Release",
    "binding.gyp",
    "src/backends/apple/native"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./llm": {
      "types": "./dist/llm/index.d.ts",
      "import": "./dist/llm/index.js",
      "require": "./dist/llm/index.cjs"
    }
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsup",
    "build:native": "node-gyp rebuild",
    "build:all": "pnpm run build:native && pnpm run build",
    "install": "node-gyp rebuild || echo 'Native module build skipped (not on macOS or node-gyp not available)'",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "clean": "rm -rf dist build",
    "release": "release-it --npm.otp=$(op item get 'npmjs' --otp)",
    "release:auto": "release-it --ci --npm.otp=$(op item get 'npmjs' --otp)"
  },
  "keywords": [
    "speech-recognition",
    "transcription",
    "whisper",
    "apple-speech",
    "parakeet",
    "sherpa-onnx",
    "local",
    "offline"
  ],
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "https://sebastian-software.de"
  },
  "license": "MIT",
  "dependencies": {
    "@mmomtchev/ffmpeg": "^2.0.1",
    "node-addon-api": "^8.5.0",
    "node-llama-cpp": "^3.14.5"
  },
  "optionalDependencies": {
    "sherpa-onnx-node": "^1.12.19",
    "node-gyp": "^12.1.0"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "release-it": "^19.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
