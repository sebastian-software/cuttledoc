{
  "name": "@cuttledoc/cli",
  "version": "0.1.0",
  "description": "CLI for cuttledoc - video-to-document transcription",
  "type": "module",
  "bin": {
    "cuttledoc": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cuttledoc",
    "cli",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cuttledoc": "workspace:*"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}

