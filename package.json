{
  "name": "@cuttledoc/monorepo",
  "description": "Fast offline video-to-document transcription with AI enhancement",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "docs:dev": "pnpm --filter @cuttledoc/docs run dev",
    "docs:build": "pnpm --filter @cuttledoc/docs run build",
    "format": "prettier --write .",
    "release": "pnpm --filter cuttledoc run release",
    "release:auto": "pnpm --filter cuttledoc run release:auto",
    "release:dry": "pnpm --filter cuttledoc run release:dry",
    "prepare": "husky"
  },
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "https://sebastian-software.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "node-llama-cpp"
    ]
  }
}
