{
  "name": "@cuttledoc/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Fast offline video-to-document transcription with AI enhancement",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "lint": "eslint packages --ext .ts,.tsx",
    "lint:fix": "eslint packages --ext .ts,.tsx --fix",
    "typecheck": "pnpm -r run typecheck",
    "test": "pnpm -r run test",
    "clean": "pnpm -r run clean",
    "docs:dev": "pnpm --filter @cuttledoc/docs run dev",
    "docs:build": "pnpm --filter @cuttledoc/docs run build",
    "sync-versions": "node scripts/sync-versions.js",
    "release": "release-it",
    "release:dry": "release-it --dry-run"
  },
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "https://sebastian-software.de"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-x": "^4.5.0",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "release-it": "^19.1.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
